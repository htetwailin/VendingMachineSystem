@using VendingMachineSystem.ViewModel;
@{
    Layout = null;
}
@model LoginViewModel
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-8 col-sm-10 col-12 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="fw-bold">VendingMachineSystem</h4>
                </div>
                <div class="card-body bg">
                    @using (Html.BeginForm("Account", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group row mt-3">
                            <div class="col-md-4 col-sm-4">
                                <label for="Username" class="form-label text-dark fw-bold"> User Name</label>
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row mt-2">
                            <div class="col-md-4 col-sm-4">
                                <label for="Password" class="form-label text-dark fw-bold"> Password</label>
                            </div>
                            <div class="col-md-8 col-sm-8">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row mt-3">
                            <div class="col-md-4 offset-md-4 col-sm-4 offset-sm-4">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .container {
        margin-top: 100px;
    }

    .bg {
        background-color: #f5f7fa;
    }
</style>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    // Handle form submission errors
    $(document).ready(function () {
        $("form").on("submit", function (e) {
            e.preventDefault();

            // Submit the form using AJAX
            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: $(this).serialize(),
                success: function (result) {
                    // Success - redirect to the home page
                    if (result.status == true) {
                        //alert(result.message);
                        window.location.href = "/Users/Index";
                    } else {
                        alert(result.message);
                    }
                },
                error: function (result) {
                    // Error - display an alert message
                    alert("An error occurred while processing your request. Please try again later.");
                }
            });
        });
    });
</script>
